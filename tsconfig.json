{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
		"isolatedModules": true,
		"skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "paths": {
      "*": ["./@mf-types/*"],
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "index.d.ts", "./federated-types/*"]
}
